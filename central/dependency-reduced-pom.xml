<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>osgi-virgo-prototype</artifactId>
    <groupId>th.co.geniustree.osgi.prototype</groupId>
    <version>1.0-SNAPSHOT</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <groupId>th.co.geniustree.osgi.prototype</groupId>
  <artifactId>central</artifactId>
  <packaging>war</packaging>
  <name>central</name>
  <version>1.0-SNAPSHOT</version>
  <build>
    <finalName>central-${project.version}</finalName>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>2.3.2</version>
        <configuration>
          <source>${project.java-version}</source>
          <target>${project.java-version}</target>
          <compilerArguments>
            <endorseddirs>${endorsed.dir}</endorseddirs>
          </compilerArguments>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-war-plugin</artifactId>
        <version>2.1.1</version>
        <configuration>
          <failOnMissingWebXml>false</failOnMissingWebXml>
          <archive>
            <manifestFile>${project.build.outputDirectory}/META-INF/MANIFEST.MF</manifestFile>
          </archive>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <version>2.5.0</version>
        <executions>
          <execution>
            <id>bundle-manifest</id>
            <phase>process-classes</phase>
            <goals>
              <goal>manifest</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <supportedProjectTypes>
            <supportedProjectType>jar</supportedProjectType>
            <supportedProjectType>bundle</supportedProjectType>
            <supportedProjectType>war</supportedProjectType>
          </supportedProjectTypes>
          <instructions>
            <Web-ContextPath>/central</Web-ContextPath>
            <Import-Package>org.springframework.web,
                            org.springframework.web.context,
                            org.springframework.context.config,
                            org.springframework.web.context.request,
                            org.springframework.web.filter,
                            org.springframework.web.jsf.el,
                            org.springframework.stereotype,
                            org.springframework.context.annotation,
                            org.springframework.security.web.session,
                            org.springframework.security.config,
                            org.springframework.beans.factory,
                            org.springframework.beans.factory.xml,
                            org.springframework.security,
                            org.springframework.security.web.authentication,
                            org.springframework.security.core.userdetails,
                            org.springframework.security.authentication.dao,
                            
                            org.eclipse.virgo.web.dm,
                            
                            javax.el,
                            javax.servlet, 
                            javax.servlet.http,
                            javax.enterprise.context,
                            
                            javax.faces,
                            javax.faces.webapp,
                            javax.faces.application,                             
                            javax.faces.event,
                            javax.faces.bean,
                            javax.faces.convert,
                            javax.faces.context,
                            javax.faces.component,
                            javax.faces.component.html,
                            javax.faces.component.behavior,
                            javax.faces.component.visit,
                            javax.faces.model,
                            javax.faces.render,
                            javax.faces.view,
                            javax.faces.view.facelets,
                            
                            com.sun.faces.config,
                            com.sun.faces.application,
                            com.sun.faces.context,
                            com.sun.faces.lifecycle,
                            com.sun.faces.application.view,
                            com.sun.faces.renderkit,
                            com.sun.faces.component.visit,
                            com.sun.faces.facelets.impl,
                            com.sun.faces.facelets.tag.jsf,
                            com.sun.faces.application.resource,
                            com.sun.faces.ext.render,
                            com.sun.faces.facelets.component,
                            com.sun.faces.renderkit.html_basic,
                            com.sun.faces.vendor</Import-Package>
          </instructions>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>2.3</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer>
                  <resource>META-INF/spring.handlers</resource>
                </transformer>
                <transformer>
                  <resource>META-INF/spring.schemas</resource>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <repositories>
    <repository>
      <id>PrimeFaces-maven-lib</id>
      <name>Repository for library PrimeFaces-maven-lib</name>
      <url>http://repository.primefaces.org/</url>
    </repository>
  </repositories>
  <dependencies>
    <dependency>
      <groupId>javax</groupId>
      <artifactId>javaee-web-api</artifactId>
      <version>6.0</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.springframework</groupId>
      <artifactId>spring-test</artifactId>
      <version>3.1.0.RELEASE</version>
      <scope>test</scope>
    </dependency>
  </dependencies>
  <properties>
    <project.java-version>1.6</project.java-version>
    <org.springframework-version>3.1.0.RELEASE</org.springframework-version>
    <endorsed.dir>${project.build.directory}/endorsed</endorsed.dir>
    <org.springframework.security-version>3.1.0.RELEASE</org.springframework.security-version>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>
</project>

